# vim: set filetype=sshconfig nospell:

Host *
    HashKnownHosts yes
    Protocol 2
    # CVE-2016-0777 and CVE-2016-0778
    UseRoaming no
Host bitbucket bitbucket.com
    User git
    HostName bitbucket.com
Host github github.com
    User git
    HostName github.com
Host faith
    User chengxu
    HostName faith.comp.hkbu.edu.hk
    ForwardAgent yes
Host cs*
    User chengxu
    HostName %h.comp.hkbu.edu.hk
    ProxyCommand ssh-proxy-helper -h %h -p %p --proxy faith --internal-ip 158.182.0.0/16
    ForwardAgent yes
Host brew
    User brewadmin
    HostName bot.brew.sh
Host bot
    User root
    HostName bot.xuc.me
    ForwardAgent yes
Host vagrant
    User vagrant
    HostName localhost
    Port 2222
    IdentityFile ~/.vagrant.d/insecure_private_key
