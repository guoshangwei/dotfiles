#!/usr/bin/env bash

# default to dark
if [[ "$(uname)" != "Darwin" ]]; then
    echo "dark"
    exit 0
fi

IFS=', ' read -r -a color <<< "$(osascript -e '
tell application "iTerm"
get background color of current session of current window
end tell
')"

r="${color[0]}"
g="${color[1]}"
b="${color[2]}"

if [[ $((r+g+b)) -le 98302 ]]; then
    echo "dark"
else
    echo "light"
fi
