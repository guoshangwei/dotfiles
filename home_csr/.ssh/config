# vim: set filetype=sshconfig nospell:

HashKnownHosts yes
Protocol 2
# CVE-2016-0777 and CVE-2016-0778
UseRoaming no

Host bitbucket bitbucket.com
    User git
    HostName bitbucket.com
Host github github.com
    User git
    HostName github.com
Host faith cs* gpu* *.comp.hkbu.edu.hk
    ForwardAgent yes
    ProxyCommand nc %h %p
Host haibo
    User xucheng
    HostName haibo.server.xuc.me
    ForwardAgent yes
Host lab
    User chengxu@COMP-DEPT
    HostName lab.xuc.me
Host * !lab !faith !cs* !*.comp.hkbu.edu.hk
    ProxyCommand ssh -q faith nc %h %p
