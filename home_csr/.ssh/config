# vim: set filetype=sshconfig nospell:

HashKnownHosts yes
Protocol 2
# CVE-2016-0777 and CVE-2016-0778
UseRoaming no

Host faith cs* gpu*
    CanonicalizeHostname yes
    CanonicalDomains comp.hkbu.edu.hk
Host haibo db
    CanonicalizeHostname yes
    CanonicalDomains server.xuc.me
Host *.comp.hkbu.edu.hk
    User chengxu
    ForwardAgent yes
    ProxyCommand nc %h %p
Host haibo.server.xuc.me
    User xucheng
    ForwardAgent yes
Host db.server.xuc.me
    User chengxu
    ForwardAgent yes
Host * !*.comp.hkbu.edu.hk
    ProxyCommand ssh -q faith nc %h %p
